<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="BigTeddies_Promotions::promotions" title="Promotions" sortOrder="1000">
                    <resource
                        id="BigTeddies_Promotions::promotions_get_list"
                        title="Get Promotions List"
                        sortOrder="10"
                    />
                    <resource
                        id="BigTeddies_Promotions::promotions_add"
                        title="Add Promotion"
                        sortOrder="20"
                    />
                    <resource
                        id="BigTeddies_Promotions::promotions_remove"
                        title="Remove Promotion"
                        sortOrder="30"
                    />
                    <resource
                        id="BigTeddies_Promotions::groups_get_list"
                        title="Get Groups List"
                        sortOrder="40"
                    />
                    <resource
                        id="BigTeddies_Promotions::groups_add"
                        title="Add Group"
                        sortOrder="50" />
                    <resource
                        id="BigTeddies_Promotions::groups_remove"
                        title="Remove Group"
                        sortOrder="60"
                    />
                </resource>
            </resource>
        </resources>
    </acl>
</config>
